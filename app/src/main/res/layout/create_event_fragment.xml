<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventImg">

        <EditText
            android:id="@+id/nameEvent"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:autofillHints="name"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/name_of_your_event"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/categories"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="25dp"
            android:background="#FFFFFF"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toBottomOf="@+id/nameEvent" />

        <EditText
            android:id="@+id/descriptionEvent"
            android:layout_width="356dp"
            android:layout_height="78dp"
            android:layout_marginTop="14dp"
            android:autofillHints="description"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/description_of_your_event"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <EditText
            android:id="@+id/locationEvent"
            android:layout_width="356dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:autofillHints="location"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/location_event"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateEvent" />

        <EditText
            android:id="@+id/priceEvent"
            android:layout_width="356dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:autofillHints="price"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/price_event_product"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationEvent" />

        <EditText
            android:id="@+id/dateEvent"
            android:layout_width="356dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:autofillHints="date"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/date_hour_event"
            android:inputType="datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionEvent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/badgeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/name_of_your_event" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceEvent">

            <Button
                android:id="@+id/btnCreateEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#FFC107"
                android:text="@string/btn_create_event" />

            <Button
                android:id="@+id/btnEditEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#FFC107"
                android:text="@string/btn_edit_event" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/eventImg"
        android:layout_width="272dp"
        android:layout_height="182dp"
        android:contentDescription="@string/event_header"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>